@model WebStore.ViewModels.BreadCrumbsViewModel

    <div class="breadcrumbs">
        <ol class="breadcrumb">
            <li><a asp-controller="Home" asp-action="Index">Домой</a></li>
            <li class="active"><a asp-controller="Catalog" asp-action="Index">Каталог</a></li>

            @if (Model.Section is not null)
            {
                @if (Model.Section.Parent is not null)
                {
                    <li class="active">
                        <a asp-controller="Catalog" asp-action="Index" asp-route-SectionId="@Model.Section.Parent.Id">
                            @Model.Section.Parent.Name
                        </a>
                    </li>
                }
                <li class="active">
                    <a asp-controller="Catalog" asp-action="Index" asp-route-SectionId="@Model.Section.Id">
                        @Model.Section.Name
                    </a>
                </li>
            }

            @if (Model.Brand is not null)
            {
                <li class="active">
                    <a asp-controller="Catalog" asp-action="Index" asp-route-BrandId="@Model.Brand.Id">
                        @Model.Brand.Name
                    </a>
                </li>
            }

            @if (Model.Product is not null)
            {
                <li>@Model.Product</li>
            }
        </ol>
    </div>