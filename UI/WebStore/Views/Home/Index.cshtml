@using WebStore.Interfaces.Services
@using WebStore.Infrastructure.Mapping
@inject IProductData ProductData
@{
    var products = ProductData
        .GetProducts()
        .OrderBy(p => p.Order)
        .Take(6)
        .ToView();
}

<partial name="Partial/_Slider" />

<section>
    <div class="container">
        <div class="row">
            <div class="col-sm-3">
                <partial name="Partial/_Left-sidebar" />
            </div>

            <div class="col-sm-9 padding-right">
                <partial name="Partial/_Features_items"  model="products"/>

                <partial name="Partial/_Category-tab" />

                <partial name="Partial/_Recommended_items" />
            </div>
        </div>
    </div>
</section>